<div class="container-fluid" id="promoter_forms">

 

    <%= form_for @user, :url => '/promoter' do |u| %>

        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@user.errors.count, "error") %> prohibited this promoter from being saved:
              </h2>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        
        <div class="box">
            <h2>Estão ansiosos por poder partilhar os vossos Eventos?</h2>
            <p>Só falta mais um passo!</p>
        </div>

        <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span> 
            <%= text_field_tag :name, "", class: 'form-control', :placeholder => 'Nome Núcleo'%>
        </div>
            <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-university"></i></span> 
            <%= text_field_tag :institution, "", class: 'form-control', :placeholder => 'Instituição' %>
        </div>
         </div>

         


         <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-link"></i></span> 
            <%= text_field_tag :website, "", class: 'form-control', :placeholder => 'Website'%>
        </div>
        </div>

          <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-mobile"></i></span> 
            <%= text_field_tag :contact, "", class: 'form-control', :placeholder => 'Contacto'%>
        </div>
    </div>

        <div class="box" id="title">
            <p>Credencias</p>
        </div>

         <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa">@</i></span> 
            <%= u.email_field :email, :class => 'form-control', :placeholder => 'E-mail'%>
        </div>
    </div>

        <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-lock"></i></span> 
            <%= u.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
        </div>
    </div>
        <%= u.submit 'Submeter', :class => 'btn btn-primary active' , :id=> 'btn_promoter_user' %>
    <% end %>
</div>

