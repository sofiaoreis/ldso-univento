    <div class="jumbotron">
    
        <div class="regist_title">Registo na UNIVENTO!</div>
        Queres ficar a par de todos os eventos na tua Academia?<br>
        <%= form_for @user, :url => '/user' do |u| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2>
                    <%= pluralize(@user.errors.count, "error") %> prohibited
                    this user from being saved:
                  </h2>
                  <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="form-group">
                <%= u.email_field :email , :class => 'form-control', :placeholder => 'E-mail'%>
            </div>
            <div class="form-group">
                <%= u.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
            </div>
            <div class="form-group">
                <%= text_field_tag :first_name,"", class: 'form-control',:placeholder => 'Primeiro Name' %>
            </div>
            <div class="form-group">
                <%= text_field_tag :last_name,"", class: 'form-control',:placeholder => 'Último Nome' %>
            </div>
            <div class="form_row">
                <label for="gender">Género:</label>
                <% [ 'Maculino','Feminino'].each do |gender| %>
                  <br><%= radio_button_tag 'gender', gender, @gender == gender, :checked => true %>
                  <%= gender.humanize %>
                <% end %>
            </div>
            <label>Data de nascimento:
            <%=  date_select("birthday", "birthday", order: [:day, :month, :year], start_year: Time.now.year-100, end_year:Time.now.year) %>
            </label><br>
            <%= u.submit 'Submeter', :class => 'btn btn-primary active' %>
            </div>
        <% end %>    
</div>        
</div>
